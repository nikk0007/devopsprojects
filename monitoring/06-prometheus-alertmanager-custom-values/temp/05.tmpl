{{ define "emaildefaulthtml" }}
<html>
<head>
  <style>
    /* Add CSS styles here for improved email presentation */
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      margin: 0;
      padding: 0;
    }
    .container {
      width: 80%;
      max-width: 600px;
      margin: 0 auto;
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 8px;
      margin: 20px auto;
      padding: 20px;
    }
    .alert {
      margin: 0;
      padding: 0;
    }
    .alert-name {
      font-size: 24px;
      color: #333;
    }
    .timestamp {
      font-size: 14px;
      color: #777;
    }
    .summary {
      font-size: 16px;
      color: #333;
    }
    .labels {
      font-size: 16px;
      color: #333;
      margin-left: 20px;
    }
    .annotations {
      font-size: 16px;
      color: #333;
      margin-left: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    {{ range .Alerts }}
    <div class="alert">
      <h1 class="alert-name">Alert Name: {{.Labels.alertname}}</h1>
      <p class="timestamp"><b>Timestamp:</b> {{.StartsAt}}</p>
      <p class="summary"><b>Summary:</b> {{.Annotations.summary}}</p>
      <p class="labels"><b>Labels:</b></p>
      <ul class="labels">
        {{ range .Labels.SortedPairs }}
        <li>{{ .Name }}: {{ .Value }}</li>
        {{ end }}
      </ul>
      <p class="annotations"><b>Annotations:</b></p>
      <ul class="annotations">
        {{ range .Annotations.SortedPairs }}
        <li>{{ .Name }}: {{ .Value }}</li>
        {{ end }}
      </ul>
    </div>
    {{ end }}
  </div>
</body>
</html>
{{ end }}
