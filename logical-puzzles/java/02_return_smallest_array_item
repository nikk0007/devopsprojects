package com.test;

import java.util.*;

class SmallestElement {
	
	public static void main(String[] args) {
		int[] x = {-1,1, -2, 2};
		
		System.out.println(solution(x) + "");

	}
	
	//return the smallest item in array
    static int solution(int[] A) {
        int ans =0;
        for (int i = 0; i< A.length; i++) {
            if (ans > A[i]) {
                ans = A[i];
            }
        }
        return ans;
    }
}
